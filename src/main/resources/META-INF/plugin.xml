<idea-plugin>
    <id>com.cloudpense.gitredminejump</id>
    <name>Git Redmine Jump</name>
    <vendor email="pengfei.li@cloudpense.com" url="https://www.cloudpense.com">cloudpense</vendor>
    <description>Extract the Redmine task number from the current Git branch name and jump to the corresponding Redmine task page. Keyboard shortcut alt R Quick jump</description>

    <!-- 依赖的模块 -->
    <depends>com.intellij.modules.vcs</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>

    <!-- 动作扩展 -->
    <actions>
        <action id="GitRedmineJumpAction" class="com.cloudpense.gitredminejump.GitRedmineJumpAction" text="Go to Redmine Task" description="Open redmine task page">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt R"/>
        </action>
    </actions>

    <!-- 插件设置扩展 -->
    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable instance="com.cloudpense.gitredminejump.SettingsConfigurable" displayName="Git Redmine Jump"/>
    </extensions>
</idea-plugin>